@page "/"
@inject Microsoft.AspNetCore.Components.NavigationManager navManager
@using Microsoft.AspNetCore.WebUtilities
@namespace Blogzor.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<head>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
</head>

<body>
    @if (string.Concat(this.HttpContext.Request.Path.Value!.Skip(1).TakeWhile(c => c != '/')) != "admin")
    {
        <component type="typeof(App)" render-mode="Static" />
    }
    else
    {
        <component type="typeof(App)" render-mode="Server" />
    }
    <script src="_content/MudBlazor/MudBlazor.min.js"></script>
</body>
